<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- REQUIRED for the modern AppCompatActivity theme and features -->
    <uses-sdk tools:overrideLibrary="androidx.appcompat, androidx.core" />

    <!-- REQUIRED for downloading certificates from remote server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:targetApi="31">

        <!-- Define the main activity as the entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Managed Configuration (App Restrictions) -->
            <meta-data
                android:name="android.content.APP_RESTRICTIONS"
                android:resource="@xml/app_restrictions" />
        </activity>

        <!-- Certificate list viewer activity -->
        <activity
            android:name=".CertificateListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:label="Certificates"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>

</manifest>
